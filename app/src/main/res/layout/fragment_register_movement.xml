<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterMovementFragment"
    style="@style/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-medium"
        android:rotationY="0"
        android:text="Register new movement"
        android:textSize="28sp"
        style="@style/darkBlue_a_colorNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="334dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:hint="Name"
        app:boxStrokeWidthFocused="2dp"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNameMovement"
            style="@style/back_gray"
            android:layout_width="308dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="310dp"
        android:layout_height="285dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/style_border_editext"
        android:backgroundTint="@color/light_blue"
        android:baselineAligned="false"
        android:clipToOutline="false"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/addMovement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputName"
        app:layout_constraintVertical_bias="0.166">

    </LinearLayout>

    <TextView
        android:id="@+id/textRegisterMov"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-35dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="12dp"
        android:text="Select category"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/addMovement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputValue"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="192dp"
        android:layout_height="84dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="42dp"
        android:hint="Value ($)"
        app:boxStrokeColor="#A3BC00"
        app:boxStrokeWidthFocused="2dp"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:layout_constraintBottom_toTopOf="@+id/addMovement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageClothing"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextValue"
            style="@style/back_gray"
            android:layout_width="162dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_input"
            android:fontFamily="sans-serif-medium"
            android:inputType="number"
            android:maxLength="9"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addMovement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageClothing"
            app:layout_constraintVertical_bias="0.38" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addMovement"
        android:layout_width="310dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="416dp"
        android:fontFamily="sans-serif-medium"
        android:text="Add new movement"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputName" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        style="@style/back_gray"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_input"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/addMovement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/txtInputValue"
        app:layout_constraintTop_toBottomOf="@+id/imageSalary"
        app:layout_constraintVertical_bias="0.569">

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageTravel"
        style="@style/buttons"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="8dp"
        android:width="100dp"
        android:height="50dp"
        android:background="@drawable/style_border_editext"
        android:scaleType="fitCenter"
        android:src="@drawable/travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageFood"
        app:layout_constraintTop_toBottomOf="@+id/textRegisterMov" />

    <ImageButton
        android:id="@+id/imageFood"
        style="@style/buttons"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:width="100dp"
        android:height="50dp"
        android:background="@drawable/style_border_editext"
        android:maxWidth="500dp"
        android:scaleType="fitCenter"
        android:src="@drawable/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRegisterMov" />

    <ImageButton
        android:id="@+id/imageClothing"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:width="100dp"
        android:height="50dp"
        style="@style/buttons"
        android:background="@drawable/style_border_editext"
        android:scaleType="fitCenter"
        android:src="@drawable/clothing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFood" />

    <ImageButton
        android:id="@+id/imageSalary"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="16dp"
        android:width="150dp"
        android:height="100dp"
        android:background="@drawable/style_border_editext"
        android:scaleType="fitCenter"
        android:src="@drawable/salary"
        style="@style/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageClothing"
        app:layout_constraintTop_toBottomOf="@+id/imageTravel" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/spinner_Arrow"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/addMovement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/txtInputValue"
        app:layout_constraintTop_toBottomOf="@+id/imageSalary"
        app:layout_constraintVertical_bias="0.569" />

</androidx.constraintlayout.widget.ConstraintLayout>

